<script>
    // File upload preview
    document.getElementById('official-doc-file-upload')?.addEventListener('change', function(e) {
        const fileName = e.target.files[0]?.name;
        if (fileName) {
            const label = document.querySelector('label[for="official-doc-file-upload"] span');
            if (label) {
                label.textContent = fileName;
            }
        }
    });

    // Load languages and industries dynamically
    async function loadLanguages() {
        try {
            const response = await fetch('/api/languages');
            const result = await response.json();
            
            const sourceSelect = document.getElementById('sourceLanguage');
            const targetSelect = document.getElementById('targetLanguage');
            
            if (sourceSelect && targetSelect && result.success) {
                sourceSelect.innerHTML = '<option value="">Select source language...</option>';
                targetSelect.innerHTML = '<option value="">Select target language...</option>';
                
                // Loop through languages object
                Object.values(result.languages).forEach(lang => {
                    const option1 = new Option(`${lang.name} (${lang.code})`, lang.code);
                    const option2 = new Option(`${lang.name} (${lang.code})`, lang.code);
                    sourceSelect.add(option1);
                    targetSelect.add(option2);
                });
            }
        } catch (error) {
            console.error('Failed to load languages:', error);
        }
    }
    
    // Toggle shipping address section based on delivery method
    function toggleShippingAddress() {
        const deliveryMethod = document.querySelector('input[name="delivery_method"]:checked')?.value;
        const shippingSection = document.getElementById('shippingAddressSection');
        const shippingInputs = shippingSection?.querySelectorAll('input, select');
        
        if (deliveryMethod === 'physical') {
            shippingSection.style.display = 'block';
            shippingInputs?.forEach(input => input.required = true);
        } else {
            shippingSection.style.display = 'none';
            shippingInputs?.forEach(input => input.required = false);
        }
    }
    
    // Load data when page is ready
    document.addEventListener('DOMContentLoaded', function() {
        loadLanguages();
        
        // Add event listeners for delivery method radio buttons
        document.querySelectorAll('input[name="delivery_method"]').forEach(radio => {
            radio.addEventListener('change', toggleShippingAddress);
        });
        
        // Initialize shipping address visibility
        toggleShippingAddress();
    });
</script>
